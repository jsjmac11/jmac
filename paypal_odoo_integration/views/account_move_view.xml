<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="account_invoice_form_capture_payment" model="ir.ui.view">
        <field name="name">account.move.form.capture.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//header/button[@name='action_post']" position="after">
                <button name="capture_payment_action" type="object" class="oe_highlight" string="Capture" groups="base.group_no_one" attrs="{'invisible': [('pending_capture','!=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='invoice_origin']" position="before">
                    <field name="pending_capture"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_journal_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="priority">1</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                    <field name="is_paypal_payflow"/>
            </xpath>
        </field>
    </record>
</odoo>
