<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_template_signup_created" model="mail.template">
            <field name="name">Auth Signup And Signin</field>
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="subject">Welcome to: ${object.name}</field>
            <field name="email_from">${(object.create_uid.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${ctx['partner_ids'] | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br />
                            Please
                        <br />
                        
                        <a target="_blank" href="${ctx['link'] | safe}" style="color:#875A7B;">click here</a> to open your documents.
                    </p>
                </div>
            </field>
            <field name="lang">${object.create_uid.partner_id.lang}</field>
            <field name="auto_delete" eval="False" />
        </record>
    </data>
</odoo>
