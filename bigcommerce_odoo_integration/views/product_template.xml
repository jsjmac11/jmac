<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="bigcommerce_product_template_action_form" model="ir.actions.act_window">
            <field name="name">Bigcommerce Product Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form,activity</field>
            <field name="view_id" ref="product.product_template_kanban_view"/>
            <field name="search_view_id" ref="product.product_template_search_view"/>
            <field name="domain">
                ["|",('is_exported_to_bigcommerce','=',True),('is_imported_from_bigcommerce','=',True)]
            </field>
            <field name="context">{'is_exported_to_bigcommerce':True}</field>
        </record>
        <record id="add_bigcommerce_detail_view_product_template_field" model="ir.ui.view">
            <field name="name">product.template.fields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[last()]" position="after">
                    <page string="BigCommerce Information">
                        <group>
                            <group>
                                <field name="is_exported_to_bigcommerce" readonly="1"/>
                                <field name="bigcommerce_product_id" readonly="1"/>
                                <field name="bigcommerce_category_ids" widget="many2many_tags"/>
                                <!-- <field name="bigcommerce_category_ids" readonly="1"/> -->
                                <field name="bigcommerce_store_id" readonly="1"/>
                                <!-- <field name="brand_id"/> -->
                                <field name="inventory_tracking"/>
                                <field name="is_imported_from_bigcommerce"/>
                                <field name="related_products"/>
                            </group>
                            <group>
                                <field name="inventory_warning_level"/>
                                <field name="inventory_level"/>
                                <field name="is_visible"/>
                                <field name="warranty"/>
                                <field name="order_quantity_maximum"/>
                                <field name="order_quantity_minimum"/>
                                <field name="price_hidden_label"/>
                                <field name="retail_price"/>
                                <field name="tax_class_id"/>
                            </group>
                            <group>
								<field name="allow_purchases"/>
                                <field name="item_type"/>
                                <field name="product_depth"/>
                                <field name="gtin"/>
                                <field name="height"/>
                                <field name="width"/>
                                <field name="map_price"/>
                                <field name="option_set_align"/>
                                <field name="product_image_description_1"/>                            
                            	<field name="product_tax_class"/>
                            	<field name="product_visible"/>
                            	<field name="product_weight"/>
                            	<field name="show_product_condition"/>
                            	<field name="stop_processing_rules"/>
                            	<field name="vendor_part_number"/>
                            	<field name="option_set_display"/>
                            	<field name="free_shipping_override"/>
                            	<field name="photos_cloned_from"/>
                            	<field name="description_override"/>
                            	<field name="pack_qty"/>
                            	<field name="image_is_thumbnail"/>
                            	<field name="image_sort"/>
                            </group>
                            <group>
								<field name="is_free_shipping"/>
								<field name="is_featured"/>
								<field name="is_preorder_only"/>
								<field name="is_price_hidden"/>
                                <field name="meta_description"/>
                                <field name="meta_keywords"/>
                                <field name="page_title"/>                            
                            	<field name="product_availability"/>
                            	<field name="product_condition"/>
                            	<field name="product_URL"/>
                            	<field name="search_keywords"/>
                            	<field name="sort_order"/>
                            	<field name="track_inventory"/>
                            	<field name="product_type"/>
                            	<field name="product_custom_fields"/>
                            	<field name="image_file_override"/>
                            	<field name="search_keywords_override"/>
                            	<field name="super_pmo"/>
                            	<field name="pmo"/>
                            </group>
                        </group>
                         <button type='object' class="fa fa-arrow-right oe_link" name="export_stock_from_odoo_to_bigcommerce"
                            string="Export Stock From Odoo To Bigcommerce"/>
                    </page>
                </xpath>
				<xpath expr="//label[@for='standard_price']" position="replace">
                    <label for="standard_price"  string="Cost Price"/>
				</xpath>
                <xpath expr="//label[@for='list_price']" position="replace">
                    <label for="list_price"  string="Sale Price"/>
                </xpath>
            </field>
        </record>
        <record id="view_form_product_product_bigcommerce_info" model="ir.ui.view">
            <field name="name">view.form.product.product.bigcommerce.info</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[last()]" position="after">
                    <page string="BigCommerce Variant Information">
                        <group>
                            <group>
                                <field name="bigcommerce_product_variant_id" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <menuitem id="bigcommerce_store_product_menuitem" name="Product"
                  sequence="9" parent="bigcommerce_odoo_integration_store_menuitem"
                  action="bigcommerce_product_template_action_form"/>
        <record id="bigcommerce_product_action_form" model="ir.actions.server">
            <field name="name">Export Product to BigCommerce</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="code">
                records.export_bulk_product_to_bigcommerce()
            </field>
        </record>
           <record id="added_x_studio_manufacturer_product_template_form_view" model="ir.ui.view">
            <field name="name">added.x_studio.manufacturer.product.template.product.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="x_studio_manufacturer"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
