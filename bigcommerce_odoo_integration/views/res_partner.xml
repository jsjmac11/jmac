<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="bigcommerce_customer_action_form" model="ir.actions.act_window">
            <field name="name">Bigcommerce Customer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_available_in_bigcommerce','=',True)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="view_id" ref="base.res_partner_kanban_view"/>
        </record>
        <record id="bigcommerce_customer_form_view" model="ir.ui.view">
            <field name="name">Bigcommerce Customer</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet" position="before">
                    <header>
                        <button name="export_update_customer_odoo_to_bigcommerce" string="Update To Bigcommerce" type="object" class="oe_stat_button" attrs="{'invisible':[('is_available_in_bigcommerce', '!=', True)]}"></button>
                        <button name="delete_customer_odoo_to_bigcommerce" string="Delete To Bigcommerce" type="object" class="oe_stat_button" attrs="{'invisible':[('is_available_in_bigcommerce', '!=', True)]}"></button>
                    </header>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page name="bigcommerce_info" string="BigCommerce Info">
                        <group>
                            <field name="bigcommerce_store_id" readonly="0"/>
                            <field name="bigcommerce_customer_id"/>
                            <field name="is_available_in_bigcommerce" readonly="0"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//form/sheet/notebook[1]/page[1]/field[@name='child_ids']/form/sheet/field[@name='type']" position="after">
                    <field name="bigcommerce_shipping_address_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="action_export_customer_odooo_to_bigcommerce" model="ir.actions.server">
            <field name="name">Export Customer to BigCommerce</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="binding_model_id" ref="model_res_partner"/>
            <field name="code">
                  records.odoo_to_bigcommerce_export_customer_manually()
            </field>
        </record>

        <menuitem id="bigcommerce_store_customer_menuitem" name="Customer"
                  sequence="9" parent="bigcommerce_odoo_integration_store_menuitem"
                  action="bigcommerce_customer_action_form"/>
    </data>
</odoo>
