<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_bigcommerce_product_category_tree_view" model="ir.ui.view">
            <field name="name">Bigcommerce Category</field>
            <field name="model">bigcommerce.category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="BigCommerce Category Info">
                    <field name="name" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="display_name"/>
                    <field name="complete_name" invisible="1"/>
                    <field name="bigcommerce_store_id"/>
                    <field name="bigcommerce_parent_category_id" invisible="1"/>
                    <field name="bigcommerce_product_category_id" invisible="1"/>
                    <field name="custom_url" invisible="1"/>
                    <field name="is_visible" invisible="1"/>
                    <field name="is_exported_to_bigcommerce" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_bigcommerce_product_category_form_view" model="ir.ui.view">
            <field name="name">Bigcommerce Category</field>
            <field name="model">bigcommerce.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="BigCommerce Category Info" create='false'>
                    <header>
                        <button name="export_update_product_categories_odoo_to_bigcommerce" string="Update Category To Bigcommerce" type="object" class="oe_stat_button" attrs="{'invisible':[('is_exported_to_bigcommerce', '!=', True)]}"></button>
                        <button name="delete_product_categories_odoo_to_bigcommerce" string="Remove Category To Bigcommerce" type="object" class="oe_stat_button" attrs="{'invisible':[('is_exported_to_bigcommerce', '!=', True)]}"></button>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="display_name" invisible="1"/>
                            <field name="complete_name" invisible="1"/>
                            <field name="bigcommerce_store_id" readonly="0"/>
                            <field name="bigcommerce_parent_category_id" />
                            <field name="bigcommerce_product_category_id" readonly="1"/>
                            <field name="custom_url" />
                            <field name="is_visible" />
                            <field name="is_exported_to_bigcommerce" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bigcommerce_product_category_new" model="ir.actions.act_window">
            <field name="name">Bigcommerce Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bigcommerce.category</field>
            <field name="domain">[('is_exported_to_bigcommerce','=',True)]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_bigcommerce_product_category_tree_view"/>
            <field name="domain">[]</field>
        </record>

        <!-- Export categories action -->
        <record id="action_exported_category_to_bigcommerce" model="ir.actions.server">
                <field name="name">Export Product Category to BigCommerce</field>
                <field name="type">ir.actions.server</field>
                <field name="state">code</field>
                <field name="model_id" ref="model_bigcommerce_category"/>
                <field name="binding_model_id" ref="model_bigcommerce_category"/>
                <field name="code">
                      records.export_product_category_to_bigcommerce()
                </field>
        </record>

        <!-- Export update categories action -->
        <record id="action_exported_update_category_to_bigcommerce" model="ir.actions.server">
                <field name="name">Export Update Product Category to BigCommerce</field>
                <field name="type">ir.actions.server</field>
                <field name="state">code</field>
                <field name="model_id" ref="model_bigcommerce_category"/>
                <field name="binding_model_id" ref="model_bigcommerce_category"/>
                <field name="code">
                      records.export_update_product_categories_odoo_to_bigcommerce()
                </field>
        </record>

        <menuitem id="menu_bigcommerce_product_category" name="Bigcommerce Product Category"
            parent="bigcommerce_odoo_integration_store_menuitem" sequence="3"
            action="action_bigcommerce_product_category_new" />
    </data>
</odoo>
