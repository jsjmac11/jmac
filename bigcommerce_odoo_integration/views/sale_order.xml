<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="bigcommerce_order_form_view" model="ir.ui.view">
            <field name="name">Bigcommerce Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="exportordertobigcommerce" type="object" string="Export Order"  attrs="{'invisible': ['|',('state', '!=','sale'), ('big_commerce_order_id', '!=',False)]}" />
                    <button name="update_order_to_bigcommerce" type="object" string="Update Order"  attrs="{'invisible': ['|',('big_commerce_order_id', '=',False)]}"/>
                  <button name="get_shipped_qty" type="object" string="Shipped Qty"   />
                </header>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="bigcommerce_store_id" />
                    <field name="big_commerce_order_id"/>
                    <field name="bigcommerce_shipment_order_status" />
                    <field name="bigcommerce_order_status_id"/>
                    <field name="exp_bigcommerce_order_status_id" />
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before">
                    <field name="quantity_shipped"/>
                </xpath>
            </field>
        </record>

        <record id="bigcommerce_order_line_form_view" model="ir.ui.view">
            <field name="name">Bigcommerce Order Line</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="big_commerce_tax"/>
                </xpath>
            </field>
        </record>

        <record id="bigcommerce_sale_order_action_form" model="ir.actions.act_window">
            <field name="name">Bigcommerce SaleOrder</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale.view_order_tree"/>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="domain">[('big_commerce_order_id','!=',False)]
            </field>
            <field name="context">{'big_commerce_order_id':True,
                'search_default_group_bigcommerce_store_id':1,
                'search_default_group_bigcommerce_order_status_id':1}</field>
        </record>

        <menuitem id="bigcommerce_store_sale_order_menuitem" name="Sale Order"
                  sequence="9" parent="bigcommerce_odoo_integration_store_menuitem"
                  action="bigcommerce_sale_order_action_form"/>

        <record id="view_bigcommerce_order_status_tree_view" model="ir.ui.view">
            <field name="name">BigCommerce Order Status</field>
            <field name="model">sale.order.status</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="BigCommerce Order Status">
                    <field name="status_id" />
                    <field name="name" />
                    <field name="bigcommerce_store_id"/>
                    <field name="odoo_state"/>
                </tree>
            </field>
        </record>

        <record id="view_form_bigcommerce_order_status" model="ir.ui.view">
            <field name="name">BigCommerce Order Status</field>
            <field name="model">sale.order.status</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="BigCommerce Order Status">
                    <sheet>
                        <group>
                            <group>
                                <field name="status_id"></field>
                                <field name="name"></field>
                                <field name="bigcommerce_store_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="big_commerce_status_id"/>
                                <field name="odoo_state"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1" placeholder="This note is only for internal purposes."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bigcommerce_order_status" model="ir.actions.act_window">
            <field name="name">BigCommerce Order Status</field>
            <field name="res_model">sale.order.status</field>
            <field name="view_id" ref="view_bigcommerce_order_status_tree_view" />
        </record>

        <menuitem id="menu_bigcommerce_order_status" name="BigCommerce Order Status"
            parent="bigcommerce_odoo_integration_store_menuitem" sequence="10"
            action="action_bigcommerce_order_status" />
            
        <record id="bigcommerce_sale_order_search_view_ept" model="ir.ui.view">
            <field name="name">bigcommerce Sale Order Search View</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <filter name="customer" position="after">
                    <filter name="group_bigcommerce_store_id" string="Bigcommerce Store" domain="[]"
                            icon="terp-personal"
                            context="{'group_by':'bigcommerce_store_id'}"/>
                    <filter name="group_bigcommerce_order_status_id" string="Bigcommerce Status" domain="[]"
                            icon="terp-personal"
                            context="{'group_by':'bigcommerce_order_status_id'}"/>
                </filter>
            </field>
        </record>
    </data>
</odoo>
