<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_pack" model="ir.ui.view">
        <field name="name">product.template.form.inhe.pack</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='name']" position="replace">
            </xpath>
            <xpath expr="//field[@name='default_code']" position="replace">
                <field name="name" />
            </xpath>
            <xpath expr="//field[@name='name']" position="replace">
                <label class="oe_edit_only" for="ref" string="Product Code"/>
                <h1><field name="default_code" placeholder="Product Code"/></h1>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="parent_manufacture" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="product_pack" string="Product Pack">
                    <field name="product_pack_line" nolabel="1">
                        <tree editable="bottom">
                            <field name="name" attrs="{'required':[('is_auto_created','!=', True)]}"/>
                            <field name="quantity" required="1"/>
                            <field name="price" required="1"/>
                            <field name="is_auto_created" invisible="1"/>
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="product_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
                <page name="manufacturer" string="Manufacturer Info">
                    <group>
                        <group>
                            <field name="phone_number"/>
                            <field name="dropship_selection" widget="radio" options="{'horizontal': true}"/>
                            <field name="dropship_fee"/>
                            <field name="order_min"/>
                            <field name="below_min_fee"/>
                        </group>
                        <group>
                            <field name="free_freight_level"/>
                            <field name="ships_from"/>
                            <field name="ship_cutoff_time"/>
                            <field name="note" string="Notes"/>
                        </group>
                    </group>
                </page>
                <page name="product_dimension" string="Product Dimensions">
                    <field name="product_dimension_line" nolabel="1">
                        <tree editable="bottom">
                            <field name="quantity" required="1"/>
                            <field name="weight_lbs"/>
                            <field name="weight_oz"/>
                            <field name="length"/>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="product_id" invisible="1"/>
                            <field name="name" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            
        </field>
    </record>

    <record id="product_pack_uom_tree_view" model="ir.ui.view">
        <field name="name">product.pack.uom.tree</field>
        <field name="model">product.pack.uom</field>
        <field name="arch" type="xml">
            <tree editable='bottom'>
                <field name="display_name"/>
                <field name="name" attrs="{'required':[('is_auto_created','!=', True)]}" invisible="1"/>
                <field name="quantity" required="1" invisible="1"/>
                <field name="price" required="1"/>
                <field name="is_auto_created" invisible="1"/>
                <field name="product_tmpl_id" invisible="1"/>
                <field name="product_id" invisible="1"/>                
            </tree>
        </field>
    </record>

    <record id="product_pack_uom_form_view" model="ir.ui.view">
        <field name="name">product.pack.uom.form</field>
        <field name="model">product.pack.uom</field>
        <field name="arch" type="xml">
            <form editable='bottom'>
                <field name="name" attrs="{'required':[('is_auto_created','!=', True)]}"/>
                <field name="quantity" required="1"/>
                <field name="price" required="1"/>
                <field name="is_auto_created" invisible="1"/>
                <field name="product_tmpl_id" invisible="1"/>
                <field name="product_id" invisible="1"/>                
            </form>
        </field>
    </record>


</odoo>