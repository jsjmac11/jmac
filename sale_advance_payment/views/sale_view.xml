<odoo>
	<data>
		<record id="view_sale_order_form_inherit" model="ir.ui.view">
			<field name="name">sale.order.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='user_id']" position="after">
					<field name="advance_payment_done" />
				</xpath>
				<xpath expr="//button[@name='action_confirm']"
					position="after">
					<button name="sale_open_advance_payment_wizard"
						string="advance payment" type="object"
						attrs="{'invisible': ['|','|',('state', 'not in', ['new','sent','review']),('advance_payment_done','=',True),('payment_term_id','=',False)]}" />
				</xpath>
				<xpath expr="//field[@name='payment_term_id']" position="attributes">
					<attribute name="required">1</attribute>
				</xpath>
				<xpath expr="//field[@name='note']" position="before">
					<group string="Advance Payment" colspan="4">
						<field name='payment_line' readonly="1" nolabel="1">
							<tree>
								<field name="state" invisible="1" />
								<field name="currency_id" invisible="1" />
								<field name="payment_date" />
								<field name="partner_id" />
								<field name="name" />
								<field name="journal_id" />
								<field name="payment_method_id" />
								<field name="amount" widget="monetary"/>
							</tree>
							<form>
								<group>
									<field name="state" invisible="1" />
									<field name="currency_id" invisible="1" />
									<field name="payment_date" />
									<field name="partner_id" />
									<field name="name" />
									<field name="journal_id" />
									<field name="payment_date" />
									<field name="payment_method_id" />
									<field name="amount" widget="monetary"/>
								</group>
							</form>
						</field>
					</group>
				</xpath>
